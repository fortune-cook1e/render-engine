{
  "compilerOptions": {
    "rootDir": "src",
    "module": "ESNext",
    "allowJs": true,
    "strict": true,
    "target": "ES2017",
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "declarationDir": "dist",
    "moduleResolution": "Node",
    "declaration": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2015.core",
      "es2015.promise",
      "es5",
      "esnext.array",
      "es2017.object",
      "es6",
      "es2015.iterable",
      "es2015.generator",
      "es2015.symbol",
      "es7"
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "storybook-static",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx"
  ],
  "typeRoots": ["node_modules/@types", "src/global.d.ts", "vite.config.ts", "vite/client"]
}
